<div class="promo-block">
    <div class="promo-inner">
        <div class="promo-inner-top">
            <div class="promo-label green-label title">Товар дня</div>
            <div class="promo-link"><a href="{link}">Смотреть</a></div>
        </div>
        <a href="{link}" class="promo-inner-content">
            <div class="prod-inner-image">
                {img}
            </div>
            <div class="prod-inner-title">
                {title}
            </div>
            <div class="prod-inner-price">
                Цена: <span> {price} руб.</span>
            </div>
        </a>
    </div>
</div>